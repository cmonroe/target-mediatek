 #define VEND1_GLOBAL_FW_ID_MAJOR		GENMASK(15, 8)
 #define VEND1_GLOBAL_FW_ID_MINOR		GENMASK(7, 0)
 
+#define AQR_NUM_LEDS					3 
+#define VEND1_GLOBAL_LED_PROVISIONING	0xc430
+#define AQR_LED(x)						(VEND1_GLOBAL_LED_PROVISIONING + x)
+
